@using UOW.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <div class="col end-0 ">
        <a class="btn btn-primary" asp-action="Create">Add New Product</a>
    </div>
    <div class="shadow p-3 mb-5 bg-white rounded">
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th class="align-items-center"></th>
                </tr>
            </thead>
            <tbody>
                @if(Model != null && Model.Any())
                {
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @product.Id
                            </td>
                            <td>
                                @product.ProductName
                            </td>
                            <td>
                                @product.Price
                            </td>
                            <td>
                                @product.Qty
                            </td>
                            <td>
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@product.Id">Details</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">
                            Product not available at this moment!
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

